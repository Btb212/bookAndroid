<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_history_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re"
            />
        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="历史记录"
            android:textSize="26sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/iv_history_qp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/qp"

            />

        <TextView
            android:id="@+id/tv_history_data"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2018.12.06"
            android:textSize="20sp"


            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_history_xiantiao"
            android:layout_width="30dp"
            android:layout_height="162dp"
            android:src="@drawable/xt" />

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="150dp"
            >

            <ImageView
                android:id="@+id/iv_mycollection_one"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/prideandprejudice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mycollection_one"
                android:layout_centerInParent="true"
                android:text="傲慢与偏见" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_mycollection_two"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/peopleandthing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mycollection_two"
                android:layout_centerInParent="true"
                android:text="这些人，那些事" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_mycollection_three"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selfcontrol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mycollection_three"
                android:layout_centerInParent="true"
                android:text="自控力" />

        </RelativeLayout>

    </LinearLayout>








</LinearLayout>
