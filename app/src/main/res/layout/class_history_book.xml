<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_classhistoy_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re"
            />

        <TextView
            android:id="@+id/tv_classhistory_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="历史"
            android:textSize="26sp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_classfamous_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="“历史充满偶然，我们总是误会历史。历史没有真相，重要的是你怎么看。在蜗牛读书，分享读史的快乐。”"/>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_classhistory_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精选"
        android:textColor="#DAA520"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_classhistory_one"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="28dp"
                android:src="@drawable/remember"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/iv_classhistory_one"
                android:text="记忆小屋" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_classhistory_two"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/china_history"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/iv_classhistory_two"
                android:text="中国大历史" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_classhistory_three"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/wangchao"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/iv_classhistory_three"
                android:text="王朝物语" />




        </RelativeLayout>




    </LinearLayout>



</LinearLayout>
